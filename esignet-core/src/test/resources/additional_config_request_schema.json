{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "userinfo_response_type": {
      "type": "string",
      "enum": ["JWS", "JWE"]
    },
    "purpose": {
      "oneOf": [
        { "type":  "null" },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "enum": ["none", "verify", "link", "login"]
            },
            "title": {
              "oneOf": [
                { "type":  "null" },
                { "type": "string" },
                {
                  "type": "object",
                  "required": ["@none"],
                  "properties": {
                    "@none": { "type":  "string" }
                  },
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              ]
            },
            "subTitle": {
              "oneOf": [
                { "type":  "null" },
                { "type": "string" },
                {
                  "type": "object",
                  "required": ["@none"],
                  "properties": {
                    "@none": { "type":  "string" }
                  },
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "signup_banner_required": {
      "type": "boolean"
    },
    "forgot_pwd_link_required": {
      "type": "boolean"
    },
    "consent_expire_in_days": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "userinfo_response_type",
    "signup_banner_required",
    "forgot_pwd_link_required",
    "consent_expire_in_days"
  ]
}